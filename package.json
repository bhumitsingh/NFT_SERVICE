{
  "name": "nft-service",
  "version": "1.0.0",
  "description": "A comprehensive microservice for managing NFT metadata, ownership tracking, marketplace listings, and blockchain synchronization.",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "test:load": "k6 run tests/load/test.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "nft",
    "blockchain",
    "ethereum",
    "polygon",
    "metadata",
    "marketplace"
  ],
  "author": "NFT Service Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "apollo-server-express": "^3.11.1",
    "web3": "^1.8.2",
    "ethers": "^6.0.2",
    "pg": "^8.8.0",
    "sequelize": "^6.28.0",
    "redis": "^4.6.4",
    "elasticsearch": "^16.7.3",
    "ipfs-http-client": "^59.0.0",
    "arweave": "^1.11.6",
    "cors": "^2.8.5",
    "helmet": "^6.0.1",
    "express-rate-limit": "^6.7.0",
    "jsonwebtoken": "^9.0.0",
    "joi": "^17.7.0",
    "winston": "^3.8.2",
    "bull": "^4.10.4",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "jest": "^29.3.1",
    "supertest": "^6.3.3",
    "eslint": "^8.31.0",
    "prettier": "^2.8.2",
    "k6": "^0.0.0"
  }
}